.swiper-image{
  width:750rpx;
  height: 592rpx;
}
swiper-item image{
  width:100%;
  height: 100%;
}
.shadow{
  width:115rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  font-size:26rpx;
  background: rgba(0,0,0,0.5);
  position: absolute;
  top:414rpx;
  right: 0;
}
.blod{
  opacity:0.4;
}
.shadow-totalPage{
  opacity:0.4;
  font-size:20rpx;
}
.relateInfo{
  width:750rpx;
  padding:30rpx 25rpx;
}
.name{
  width:700rpx;
  height: 60rpx;
  line-height: 60rpx;
  letter-spacing: 2rpx;
}
.name-txt{
  font-size:36rpx;
}
.name-start{
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
}
.star-img{
  width:31rpx;
  height: 30rpx;
  margin-right: 5rpx;
}
.score{
  font-size:26rpx;
  margin-left:13rpx;
}
.store,.address,.tel,.tip{
  width:100%;
  height: 70rpx;
  font-size:30rpx;
  position: relative;
}
.store-img,.addr-img,.tel-img,.tip-img{
  width:33rpx;
  height: 33rpx;
  margin-right: 23rpx;
}
.store-img image,.addr-img image,.tel-img image,.tip-img image{
  width:100%;
  height: 100%;
}
.tip-txt{
  font-size:26rpx;
  color:rgba(102,102,102,1);
  margin:26rpx 57rpx;
}
.timeSelect{
  width:750rpx;
  height:288rpx;
  margin-top:16rpx;
}
.timeSelect-time{
  width:100%;
  height: 96rpx;
  display: flex;
  font-size:28rpx;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.optionBall{
  width: 100rpx;
  height: 50rpx;
  margin-left: 25rpx;
  border: 1rpx solid rgba(229,229,229,1);
  border-radius: 10rpx;
}
.isSelect{
  color: #DB2121;
  border: 1rpx solid #DB2121;
}
.timeSelect-selected{
  width:100%;
  height: 190rpx;
}
.slider{
  width:110rpx;
  height:110rpx;
  font-size:24rpx;
  border-radius:14rpx;
  background:rgba(56,219,248,1);
}
.detailIntro{
  width:750rpx;
  font-size:30rpx;
  padding: 30rpx 25rpx;
  margin:16rpx 0;
}
.detailIntro-title,.detailIntro-content{
  width: 100%;
  height: 80rpx;
  font-size:26rpx;
}
.detailIntro-detail{
  width: 100%;
  padding: 20rpx 0;
  font-size:26rpx;
}
.color{
  color: #DB2121;
}
.reservePay{
  width: 150rpx;
  height: 50rpx;
  font-size:24rpx;
  border-radius: 25rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}

/* 模态框 */
.mask{
  top: 0;
}
.modialog{
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx 50rpx 50rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.modialog-select{
  width: 100%;
  height: 100rpx;
  font-size: 33rpx;
  margin-bottom: 30rpx;
}
.modialog-close{
  width: 60rpx;
  height: 60rpx;
}
.close{
  width: 100%;
  height: 100%;
}
.date{
  width: 100%;
  height: 90rpx;
  font-size: 25rpx;
}
.date-list{
  width: 100rpx;
  height: 100%;
}
.isWeek{
  border-bottom: 2rpx solid rgba(56,219,248,1);
  color: rgba(56,219,248,1);
}
.re-time{
  width: 100%;
  padding: 20rpx 0;
}
.time-box{
  width: 100%;
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
}
.time-list{
  width: 20%;
  height: 60rpx;
  border: 1rpx solid rgba(229,229,229,1);
}
.reserveBtn{
  width: 100%;
  height: 110rpx;
  margin-top: 40rpx;
  border-radius: 55rpx;
  font-size: 33rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}
.gyk{
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.bgColor{
  color: #fff;
  background:rgba(56,219,248,1);
}

/* 分享按钮 */
.market{
  width:100%;
  height: 100%;
  background:rgba(0,0,0,0.5);
  z-index: 99;
}
.share{
  width:100%;
  background: gray;
}
.btn{
  width:100%;
  height: 100rpx;
  font-size: 28rpx;
  border-radius: 0;
}
.btn::after{
  border-bottom: 1px;
}
.margin-top{
  margin-bottom: 2rpx;
}
/* 模态框 */
.mask{
  top: 0;
}