.header {
  margin: 90rpx auto;
  border: 0;
  width: 200rpx;
  height: 200rpx;
  line-height: 300rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}
 
.icon{
  width:100%;
  height: 100%;
  position: absolute;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}
 
.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
 
.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}