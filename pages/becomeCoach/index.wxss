.coach{
  width: 100%;
  padding: 30rpx 25rpx;
}
.coach-avatar{
  width: 100%;
}
.avatar{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
}
.avatar image{
  width: 100%;
  height: 100%;
}
.click-modify{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
}
.businesses{
  width:750rpx;
  height: 130rpx;
  font-size: 30rpx;
  padding:0rpx 25rpx 0rpx 25rpx;
}
.sex-box{
  display: flex;
}
.c-male{
  width:80rpx;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 24rpx;
  border:1.5rpx solid rgba(0, 0, 0,0.2);
  margin-right: 35rpx;
}
.isActive{
  color:#38DBF8;
  border-color: #38DBF8;
}
.input{
  font-size: 26rpx;
}
.placeholder{
 font-size: 26rpx;
 color:#A5A1A1;
}
.submit{
  width:360rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top:100rpx;
  margin-bottom: 50rpx;
  border-radius: 40rpx;
  background:rgba(56,219,248,1);
  font-family:MicrosoftYaHeiLight;
  font-weight:300;
  font-size:28rpx;
}
.submit::after{
  border:none;
}
.btn::after{
  border: none;
}
.btn{
  border: none;
  position: absolute;
  right: 0;
  bottom: 20rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}
.relative{
  position: relative;
}
.btn-top{
  bottom: -20rpx;
}
.img{
  width:19rpx;
  height: 22rpx;
  margin-right: 5rpx;
}
.photo{
  width: 100%;
  padding: 10rpx 25rpx;
  font-size: 28rpx;
}
.photo-box{
  width: 500rpx;
  height: 300rpx;
  border: 1rpx solid rgba(245,245,245,1);
}
.photo-box image{
  width: 100%;
  height: 100%;
}
.examine{
  width: 100%;
  font-size: 32rpx;
  padding: 30rpx 25rpx;
}
.examine-result{
  width: 100%;
  height: 70rpx;
}
.font{
  font-size: 24rpx;
  margin-top: 40rpx;
}
.note{
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
}
.weight{
  font-weight: bold;
}