.search{
  width:100%;
  height: 100rpx;
  border: 0;
  padding-left:30rpx;
  position: relative;
}
.input-search{
  width:450rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding-left:50rpx;
  font-size:24rpx;
  background:rgba(239,244,247,1);
  color:rgba(153,153,153,1);
  border:0;
  border-radius:35rpx;
}
.placeholder{
  width:214rpx;
  height:25rpx;
  font-size:24rpx;
  color:rgba(153,153,153,1);
  line-height:36rpx;
}
.search-btn{
  width: 100rpx;
  height: 52rpx;
  border-radius: 8rpx;
  margin-left: 15rpx;
  font-size:24rpx;
  border: 1rpx solid rgba(153,153,153,1);
}

/* 遮罩层 */
.con{
  height: 100%;
}
.mask{
  top: 200rpx;
}
.list{
  width: 100%;
  padding: 0rpx 25rpx 30rpx;
  margin-top: 25rpx;
}
.list-ul{
  width: 100%;
  flex-wrap:wrap;
}
.list-li{
  width: 47%;
  margin-top:30rpx;
}
.img{
  width: 330rpx;
  height: 261rpx;
}
.img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.list-li-1{
  width: 100%;
  margin-top: 10rpx;
}
.name{
  width:100%;
  height: 40rpx;
  font-size: 26rpx;
  display: block;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.list-li-2{
  width: 100%;
}
.list-li-3{
  color: #fe411b;
  font-size: 24rpx;
}
.list-li-4{
   font-size: 24rpx;
}
.isActive{
  color: #fe411b;
}

.listLi{
  width: 100%;
  font-size: 28rpx;
  padding: 0 0 25rpx;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
}
.li-title{
  width: 100%;
  height: 120rpx;
  padding: 25rpx 20rpx;
}
.li-left{
  height: 100%;
}
.li-avatar{
  width: 80rpx;
  height: 80rpx;
}
.li-avatar image{
  width: 100%;
  height: 100%;
}
.li-storeName{
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 30rpx;
}
.li-btn{
  width: 110rpx;
  height: 44rpx;
  border: 1rpx solid #3CBDF9;
  color: #3CBDF9;
  border-radius: 22rpx;
}
.li-imgs{
  width: 100%;
  height: 175rpx;
  padding: 0 20rpx;
  display: flex;
}
.li-img{
  width: 214rpx;
  height: 169rpx;
  margin-right: 6rpx;
  border-radius: 10rpx;
}
.li-img image{
  width: 100%;
  height: 100%;
}

/* 暂无数据 */
.nodata{
  width:100%;
  height: 100%;
  position: fixed;
  left:0;
  top: 230rpx;
}