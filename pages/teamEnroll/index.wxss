/* pages/teamEnroll/index.wxss */
.team-box{
  width: 100%;
  font-size: 28rpx;
}
.team-name{
  height: 70rpx;
  padding: 40rpx 25rpx 0;
}
.item{
  height: 190rpx;
  padding: 20rpx 25rpx 0;
  display: flex;
}
.item-box{
  width: 200rpx;
  height: 100%;
}
.group-name{
  padding: 10rpx 25rpx;
}
.item-list{
  width: 100%;
  height: 60rpx;
}
.check-box{
  width: 30rpx;
  height: 30rpx;
  margin-top: 8rpx;
  border: 1rpx solid rgba(153,153,153,1);
}
.enrolless-box{
  font-size: 28rpx;
  margin-top: 20rpx;
}
.enrolless{
  width: 100%;
  padding: 15rpx 25rpx;
  margin-bottom: 2rpx;
}
.flex-end{
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.increase{
  width: 40rpx;
  height: 40rpx;
}
.increase image{
  width: 100%;
  height: 100%;
}
.wid-hei{
  width: 100%;
  height: 80rpx;
}
.weight{
  font-weight: bold;
}
.input-name{
  width: 440rpx;
  height: 60rpx;
  padding: 0 10rpx;
  border: 1rpx solid rgba(229,229,229,1);
  position: relative;
}
.cate-wid{
  width: 190rpx;
}
.tick-png{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.input-selected{
  width: 120rpx;
  height: 60rpx;
  padding: 0 15rpx;
  border: 1rpx solid rgba(229,229,229,1);
  position: relative;
}
.draw{
  width: 25rpx;
  height: 15rpx;
}
.select-box{
  width: 100%;
  background-color: #eee;
  padding: 0 15rpx;
  position: absolute;
  top: 55rpx;
  left: 0;
  z-index: 999;
}
.select-option {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}
.text-ellipsis{
  white-space: nowrap;
  text-overflow:ellipsis;
}
.name-text{
  width: 140rpx;
  height: 70rpx;
  font-weight: bold;
  line-height: 70rpx;
  text-align: right;
}
.name-text-align{
  line-height: 35rpx;
}
.gender{
  width: 70rpx;
  height: 100%;
  margin-right: 20rpx;
}
.gender-box{
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid rgba(229,229,229,1);
}
.gender-box image,.check-box image{
  width: 30rpx;
  height: 30rpx;
}
.isActive{
  border: 0;
}
.bill{
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.bill-pay{
  width: 150rpx;
  height: 100%;
}
.arrow{
  width: 15rpx;
  height: 25rpx;
}
.date{
  width: 100%;
  color: #fe411b;
  font-size: 24rpx;
  height: 80rpx;
}
.signUp-box{
  width: 100%;
  height: 110rpx;
}
.signUp{
  width: 300rpx;
  height: 65rpx;
  margin: 60rpx auto;
  font-size: 28rpx;
  border-radius: 5rpx;
  background: linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}