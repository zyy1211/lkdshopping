.con{
  margin-bottom: 0;
}
.navTab{
  width:749rpx;
  height: 100rpx;
  font-size: 28rpx;
  margin-bottom: 25rpx;
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
}
.nav-title{
  width: 50%;
  height: 100%;
}
.nav-border-right{
  border-right: 1rpx solid rgba(245,245,245,1);
}
.arrow{
  width: 20rpx;
  height: 14rpx;
  margin-left: 10rpx;
}
.orderLists{
  width: 750rpx;
  margin-top: 126rpx;
}
.order-list{
  width: 100%;
  margin-bottom: 25rpx;
  font-size: 28rpx;
}
.chart{
  font-weight: bold;
  position: relative;
  top: -7rpx;
  font-size: 29rpx;
}
.order-title{
  width: 100%;
  height: 80rpx;
  padding: 0 30rpx;
}
.title-img{
  width: 16rpx;
  height: 28rpx;
}
.order-info{
  width: 100%;
  padding: 30rpx;
  display: flex;
}
.order-img{
  width: 240rpx;
  height: 189rpx;
}
.order-img image{
  width: 100%;
  height: 100%;
}
.info{
  margin-left: 20rpx;
}
.info-title{
  font-size: 33rpx;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.info-date{
  margin-top: 30rpx;
}
.list-date{
  margin-top: 25rpx; 
}
.order-state{
  width: 100%;
  height: 80rpx;
  display: flex;
}
.state{
  width: 70%;
  height: 100%;
  padding-left: 30rpx;
}
.state-img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.pay{
  width:30%;
  height: 100%;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}

/* 暂无数据 */
.nodata{
  width:100%;
  position: fixed;
  left:0;
  bottom: 300rpx;
  z-index: 0;
}