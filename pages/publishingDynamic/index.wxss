/* pages/publishingDynamic/index.wxss */
.textarea{
  width: 100%;
  height: 250rpx;
  font-size: 28rpx;
  padding: 10rpx 25rpx;
}
.upload-box{
  width: 100%;
  padding: 30rpx 30rpx;
  font-size: 25rpx;
  display: flex;
  flex-wrap: wrap;
}
.img-box{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 16rpx 10rpx 16rpx;
  position: relative;
}
.img{
  width: 100%;
  height: 100%;
}
.delete{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 26rpx;
  border: 0;
  background: rgba(0, 0, 0, 0.5);
}
.upload-boxs{
  width: 100%;
  height: 240rpx;
}
.upload{
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #3CBDF9;
  font-size: 30rpx;
}
.mask{
  top: 0;
}
.fix-box{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 110rpx;
}
.fix{
  width: 100%;
  height: 90rpx;
  font-size: 28rpx;
}
.fix-bott{
  position: fixed;
  left: 0;
  bottom: 0;
}