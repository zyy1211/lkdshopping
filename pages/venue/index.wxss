.search{
  width:100%;
  height: 100rpx;
  border: 0;
  padding-left:30rpx;
  position: relative;
}
.input-search{
  width: 574rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 50rpx;
  font-size:24rpx;
  color:rgba(153,153,153,1);
  border:0;
  border-radius:35rpx;
}
.placeholder{
  font-size:24rpx;
  color:rgba(153,153,153,1);
}
.img-search{
  width: 34rpx;
  height: 36rpx;
}
.img-search image{
  width:100%;
  height: 100%;
}
.search-btn {
  width: 80rpx;
  height: 100%;
  margin-left: 40rpx;
}

.list-box{
  width: 100%;
  padding: 25rpx;
}
.list{
  width: 100%;
  height: 120rpx;
}
.list-data{
  width:  600rpx;
  height: 100%;
}
.list-title{
  font-size: 30rpx;
}
.list-addr{
  font-size: 26rpx;
}
.radio-check{
  width:  40rpx;
  height: 40rpx;
  border: 1rpx solid rgba(153,153,153,1);
}
.active{
  background:#51ABFF;
  border: 0;
}
.radio-check image{
  width: 65%;
  height: 65%;
}

/* 暂无数据 */
.nodata{
  width:100%;
  height: 100%;
  position: fixed;
  left:0;
  top: 100rpx;
  z-index: 0;
}