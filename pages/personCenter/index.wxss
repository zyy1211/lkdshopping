/* pages/personCenter/index.wxss */
.person-box{
  width: 750rpx;
  height: 100%;
  margin-top: 1rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.bold{
  font-weight: bold;
}
.avatar{
  width: 100%;
  height: 180rpx;
}
.nick-name{
  width: 100%;
  height: 120rpx;
}
.input{
  width: 300rpx;
  height: 70rpx;
  text-align: right;
}
.avatar-img{
  width:125rpx;
  height: 125rpx;
}
.avatar-img image{
  width: 100%;
  height: 100%;
}
.arrow-img{
  width:16rpx;
  height: 28rpx;
  margin-left:50rpx;
}
.phone{
  width: 100%;
  height: 120rpx;
  position: relative;
}
.btn::after{
  border: none;
}
.btn{
  border: none;
  position: absolute;
  right: 0;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}
.sex{
  width: 100%;
  height: 120rpx;
}
.sex-box{
  width: 300rpx;
  height: 100%;
}
.gender{
  width: 100rpx;
  height: 50rpx;
  font-size: 24rpx;
  border: 1.5rpx solid rgba(0, 0, 0,0.2);
}
.isActive{
  color: #38DBF8;
  border-color: #38DBF8;
}
.city{
  width: 100%;
  height: 120rpx;
}
.picker{
  width: 460rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: right;
}
.submit{
  width: 400rpx;
  height: 70rpx;
  margin: 100rpx auto;
  border-radius: 35rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}