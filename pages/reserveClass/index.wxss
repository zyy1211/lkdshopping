.navTab{
  width:750rpx;
  height: 100rpx;
  font-size: 28rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.nav-title{
  width: 50%;
  height: 100%;
}
.nav-border-right{
  border-right: 1rpx solid rgba(245,245,245,1);
}
.isActive{
  color:#38DBF8;
}
.orderLists{
  width: 750rpx;
}
.order-list{
  width: 100%;
  font-size: 28rpx;
}
.order-info{
  width: 100%;
  padding: 30rpx;
  display: flex;
}
.order-img{
  width: 240rpx;
  height: 189rpx;
}
.order-img image{
  width: 100%;
  height: 100%;
}
.info{
  margin-left: 20rpx;
}
.info-title{
  font-size: 33rpx;
}
.info-date{
  margin-top: 15rpx;
}
.list-date{
  margin-top: 25rpx; 
}

/* 暂无数据 */
.nodata{
  width:100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 120rpx;
}