/* pages/commodityEvaluation/index.wxss */
.pro-lists{
  width: 100%;
  margin-top: 1rpx;
}
.proInfo{
  width: 100%;
  height: 254rpx;
  margin-bottom: 15rpx;
  padding: 0 30rpx;
}
.proImg{
  width:207rpx;
  height:207rpx;
  border-radius:10rpx;
}
.proImg image{
  width:100%;
  height: 100%;
}
.pro{
  width: 440rpx;
  height: 100%;
}
.proName{
  height: 30%;
  padding-top: 30rpx;
  font-size:28rpx;
}
.proSize{
  height: 30%;
  font-size:26rpx;
  padding-top: 20rpx;
}
.total{
  height:30%;
}
.totalPri{
  font-size:28rpx;
  color:rgba(219,33,33,1);
}
.totalCount{
  font-size:28rpx;
  margin-right: 30rpx;
}
.evaluate{
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  font-size:26rpx;
}
.starPoints{
  width: 250rpx;
  height: 100%;
  font-size:30rpx;
}
.starPoints image{
  width:31rpx;
  height: 30rpx;
}
.textarea{
  width:100%;
  padding:0 30rpx;
  font-size:26rpx;
}
.txt{
  width:100%;
  height: 160rpx;
  border:1px solid rgba(229,229,229,1);
  border-radius:10px;
  padding: 15rpx 20rpx;
}
.submit{
  width: 300rpx;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
  margin-top: 60rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}