.head-bg{
  width: 100%;
  height: 180rpx;
  background: #4ea9f2;
  padding: 0 25rpx;
  font-size: 28rpx;
  justify-content: center;
}
.attention{
  width: 150rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.coach-info{
  width: 100%;
  font-size: 32rpx;
  padding-bottom: 30rpx;
}
.info{
  width: 70%;
  height: 200rpx;
  position: relative;
  top: -100rpx;
  left: 0;
}
.info-avatar{
  width: 170rpx;
  height: 170rpx;
  border: 10rpx solid #fff;
  margin-left: 40rpx;
}
.info-avatar image{
  width: 100%;
  height: 100%;
}
.info-name{
  height: 150rpx;
  margin-left: 30rpx;
}
.star-img{
  width:31rpx;
  height: 30rpx;
  margin-right: 5rpx;
}
.data{
  width: 100%;
  height: 130rpx;
  margin-top: -40rpx;
}
.data-com{
  width: 200rpx;
  height: 100%;
}
.bg-font{
  font-size: 34rpx;
  font-weight: bold;
}
.small-font{
  font-size: 26rpx;
}
.detailIntro{
  width:100%;
  font-size:30rpx;
  padding: 30rpx 25rpx;
  margin:16rpx 0;
}
.detailIntro-title{
  font-weight: bold;
}
.detailIntro-content{
  width: 100%;
  margin-top:20rpx;
  display: flex;
  font-size: 26rpx;
}
.imgs{
  width: 180rpx;
  height: 180rpx;
}
.imgs image{
  width: 100%;
  height: 100%;
}
.cg-info{
  width: 490rpx;
  height: 180rpx;
  font-size:30rpx;
  margin-left:25rpx;
}
.title-hide{
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis; 
}
.address{
  font-size: 26rpx;
}
.map-img{
  width:33rpx;
  height: 33rpx;
  margin-right: 5rpx;
}
.map-img image{
  width:33rpx;
  height: 33rpx;
}
.fix{
  width: 100%;
  height: 100rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  display: flex;
}
.left,.rig{
  width: 50%;
  height: 100%;
}
.color{
  color: #DB2121;
}
.reservePay{
  width: 250rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}
/* 模态框 */
.mask{
  top: 0;
}
.modialog{
  width: 100%;
  font-size: 28rpx;
  padding: 20rpx 50rpx 50rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.modialog-select{
  width: 100%;
  height: 100rpx;
  font-size: 33rpx;
  margin-bottom: 30rpx;
}
.modialog-close{
  width: 60rpx;
  height: 60rpx;
}
.close{
  width: 100%;
  height: 100%;
}
.date{
  width: 100%;
  height: 90rpx;
  font-size: 25rpx;
}
.date-list{
  width: 100rpx;
  height: 100%;
}
.isWeek{
  border-bottom: 2rpx solid rgba(56,219,248,1);
  color: rgba(56,219,248,1);
}
.re-time{
  width: 100%;
  padding: 20rpx 0;
}
.time-box{
  width: 100%;
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
}
.time-list{
  width: 20%;
  height: 60rpx;
  border: 1rpx solid rgba(229,229,229,1);
}
.reserveBtn{
  width: 100%;
  height: 110rpx;
  margin-top: 40rpx;
  border-radius: 55rpx;
  font-size: 33rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}
.gyk{
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
}
.bgColor{
  color: #fff;
  background:rgba(56,219,248,1);
}