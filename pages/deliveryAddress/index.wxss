.addrLists{
  font-size:32rpx;
  margin-top: 1rpx;
}
/* 暂无数据 */
.nodata{
  width:100%;
  height: 100%;
  position: fixed;
  left:0;
  bottom: 100rpx;
}
.addrList{
  width: 100%;
  height: 230rpx;
  margin-bottom: 20rpx;
  padding: 0 30rpx 0 20rpx;
}
.addrInfo{
  width: 100%;
  height:140rpx;
  padding: 20rpx 0;
}
.name-tel{
  font-size: 32rpx;
}
.name{
  margin-right: 20rpx;
}
.addrDetail{
  font-size: 26rpx;
}
.handle{
  width:100%;
  height:90rpx;
  line-height: 90rpx;
  font-size:30rpx;
  display: flex;
}
.default{
  width: 50%;
}
.defImg{
  width:40rpx;
  height: 40rpx;
  border-radius: 50%;
  border:1rpx solid rgba(0, 0, 0, 0.5);
  position: relative;
  margin-right: 10rpx;
}
.isActive{
  border: 0;
  background: #38DBF8;
}
.defImg image{
  width:28rpx;
  height: 20rpx;
  position: absolute;
}
.def-right{
  justify-content: flex-end;
}
.edit,.delete{
  width:105rpx;
  height: auto;
}
.edit{
  position: relative;
  left: -20rpx;
}
.edit image,.delete image{
  width:33rpx;
  height: 33rpx;
}
.fixed{
  width:100%;
  height: 100rpx;
  background:#38DBF8;
}