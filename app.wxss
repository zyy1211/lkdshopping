/* 容器 */
.con{
  width:750rpx;
  margin: 0 auto;
  background:rgba(239,244,247,1);
  font-family: PingFang-Medium,
                PingFangSC-Regular,
                Heiti,
                Heiti SC,
                DroidSans,
                DroidSansFallback,
                "Microsoft YaHei",
                sans-serif;
  -webkit-font-smoothing: antialiased;
  overflow: hidden;
}

/* 禁止点击 */
.ban{
  pointer-events:none;
}

/* 暂无数据图片大小 */
.nodata-img{
  width: 214rpx;
  height: 336rpx;
}

/*隐藏滚动条*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/* 公共白色背景 */
.whiteBackgound{
  background: #fff;
}

/* 溢出隐藏 */
.overHide{
  overflow: hidden;
}

/* W3c 标准盒子模型 */
.boxModel{
  box-sizing: border-box;
}

/* 字体 rgba 值 */
.font-color-rgba{
  color:rgba(102,102,102,1);
}
.font-color-rgbaTwo{
  color:rgba(51,51,51,1);
}
.font-color-rgbaThr{
  color:rgba(153,153,153,1);
}
.whiteFont{
  color:rgba(255,255,255,1);
}

/* 字体水平居中 */
.textAlign{
  text-align: center;
}

/* 边框倒角 */
.borderRadius{
  border-radius: 50%;
}

/* 边框 rgba 值 */
.borderRgba{
  border:1rpx solid rgba(245,245,245,1);
}
.borderTopRgba{
  border-top:1rpx solid rgba(245,245,245,1);
}
.borderBottomRgba{
  border-bottom:1rpx solid rgba(245,245,245,1);
}
.borderMiddleBottomRgba{
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.borderMiddleTopRgba{
  border-top: 1rpx solid rgba(229,229,229,1);
}

/* flex布局 主轴为X */
.flexCenter{
  display: flex;
  justify-content: center;
  align-items: center;
}
.flexBetween{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flexAround{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.flexJustAround{
  display: flex;
  justify-content: space-around;
}
.flexJustBetw{
  display: flex;
  justify-content: space-between;
}
.flexAlign{
  display: flex;
  align-items: center;
}

/* flex布局 主轴为Y */
.flexColumnCenter{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.flexColAroCenter{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.flexColBetwCenter{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.flexColJust{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.flexColJustAround{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.flexColJustBetween{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.flexColAlignCen{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.flexColAlignStart{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.flexColAlignEnd{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

/* 底部固定栏 */
.bottomFixed{
  position: fixed;
  bottom: 0;
  left:0;
}

/* 头部固定栏 */
.topFixed{
  position: fixed;
  left:0;
  top: 0;
}

/* 头部导航栏 */
.select_box{
  width:100%;
  height: 100rpx;
  font-size:28rpx;
  margin-top:1rpx;
  margin-bottom: 25rpx;
}
.select{
  width: 18%;
  text-align:left;
}
.select_text{
  font-size: 26rpx;
}
.words_img{
  width:20rpx;
  height: 14rpx;
  margin-left:5rpx;
}
.activeRotate{
  animation: Rotate 1s;
  animation-fill-mode:both; 
}
@keyframes Rotate{
  form{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(180deg);
  }
}
.option_box{
  width:100%;
  height: 600rpx;
  background-color: rgba(255,255,255,.99);
  overflow: scroll;
}
/* 模态框 */
.mask{
  width:100%;
  height: 100%;
  position: fixed;
  left: 0;
  top:100rpx;
  bottom:0;
  background:rgba(0,0,0,.5);
  z-index: 99;
}
.option{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-left:60rpx;
  border-bottom: 1rpx solid rgba(229,229,229,.1);
}

/* 手机号码模态框 */
.tel-modialog{
  width: 600rpx;
  height: 500rpx;
  border-radius: 20rpx;
}
.tel-close-modialog{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
}
.tel-get-img{
  position: relative;
  width: 600rpx;
  height: 200rpx;
}
.tel-bg{
  width: 100%;
  height: 100%;
}
.tel-welcome-title{
  width: 100%;
  margin-top: 30rpx;
  font-size: 30rpx;
}
.tel-bind-notice{
  width: 100%;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.tel-get-phone{
  width: 400rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-top: 60rpx;
  font-size: 30rpx;
  background:linear-gradient(90deg,rgba(56,219,248,1),rgba(81,171,255,1));
}
.tel-get-phone::after{
  border: none;
}


/* 热度图片大小 */
.rdImg{
  width:21rpx;
  height: 25rpx;
  margin-right: 8rpx;
}

/* 回到首页,固定定位,悬浮 */
.d-back-home {
  position: fixed;
  width: 96rpx;
  height: 96rpx;
  right: 30rpx;
  bottom: 306rpx;
  z-index: 1000;
}

/* 分享按钮 */
.shareBtn{
  width: 130rpx;
  height: 44rpx;
  border-radius: 22rpx;
  font-size: 24rpx;
  padding: 0;
  margin-right: 0;
  color: rgba(153, 153, 153, 1);
  border: 1rpx solid rgba(153, 153, 153, 1);
}